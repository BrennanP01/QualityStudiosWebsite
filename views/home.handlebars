   <script>
        const bg = document.getElementById('header');
        var header = document.getElementsByClassName("navLink")
        const bar = document.getElementById('navBar')
       
        window.addEventListener('scroll',function(){
           resizeHeaderImage();
            // Makes it so when you scroll past a certain point, the nav bar will stay in the same place and will not grow
            resizeNavBar();
           
       })
       window.addEventListener('load',function(){
            getNavBarSize();
            resizeNavBar();
            activate_cutsslides();
            activate_productslides();
            

       })
       //"Quality Cuts" slideshow
       function activate_cutsslides(){
           //When transitioning, it hides the current image
           $("#cutsslideshow > div:gt(0)").hide();

            setInterval(function() { 
            $('#cutsslideshow > div:first')
            // Interval of fade-in/fade-out
            .fadeOut(1000)
            .next()
            .fadeIn(1000)
            .end()
            .appendTo('#cutsslideshow');
            }, 3000);

       }
       //"Quality Products" slideshow
       function activate_productslides(){
           $("#productslideshow > div:gt(0)").hide();

            setInterval(function() { 
           //Interval of fade-in/fade-out 
            $('#productslideshow > div:first')
            .fadeOut(1000)
            .next()
            .fadeIn(1000)
            .end()
            .appendTo('#productslideshow');
            }, 3000);

       }
       

        function resizeNavBar(){
             if(window.pageYOffset>610){
               bar.style.position = "fixed"
               bar.style.top = "0%";
               bar.style.left = "0%";
               //bar.style.textAlign = "center"
            }
            else{
                //Once you scroll up past a certain point, the bar will begin to grow / shrink again.
                for(i =0; i<header.length; i++){
                   
                    navBarSize= 25+window.pageYOffset/20+'px';
                    header[i].style.fontSize = navBarSize;
                    bar.style.left= "0%"
                    bar.style.position = "relative"
                }
        
           } 
        }
        //Loads the correct NavBar size if the user loads the homepage below the cutoff line
        function getNavBarSize(){
            for(i =0; i<header.length; i++){
                    navBarSize= 25+610/20+'px'
                    header[i].style.fontSize = navBarSize;
                    bar.style.left= "0%"
                    bar.style.position = "relative"
                }
        

        }
        function resizeHeaderImage(){
            bg.style.backgroundSize = 100- +window.pageYOffset/12+ '%' //Shrinks the barbershop logo as you scroll down
            bg.style.opacity= 1 -+window.pageYOffset/700+ '' // Decreases the opacity of the barbershop logo as you scroll down
        }
   </script>
